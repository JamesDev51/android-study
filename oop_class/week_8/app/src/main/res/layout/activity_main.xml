<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="729dp" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="1dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="입력"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_input" android:layout_weight="1"
                    tools:iconPadding="20dp" android:insetRight="5dp" android:insetLeft="5dp" android:insetTop="5dp"
                    android:insetBottom="5dp"/>
            <Button
                    android:text="첫번째"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_first" android:layout_weight="1"
                    android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp" android:insetBottom="5dp"/>
            <Button
                    android:text="두번째"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_second" android:layout_weight="1"
                    android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp" android:insetBottom="5dp"/>
        </LinearLayout>
        <FrameLayout
                android:id="@+id/frm_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>